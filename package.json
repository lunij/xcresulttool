{
  "name": "xcresulttool",
  "version": "1.7.0",
  "private": false,
  "description": "A GitHub Action that generates a human-readable test report from the Xcode result bundle and shows it on GitHub Checks.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "pretest": "npm run build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kishikawakatsumi/xcresulttool.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Kishikawa Katsumi",
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "2.1.9",
    "@actions/core": "1.10.1",
    "@actions/exec": "1.1.1",
    "@actions/github": "6.0.0",
    "@octokit/action": "7.0.0",
    "image-size": "1.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.0.0",
    "eslint-plugin-jest": "^28.0.0",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
    "json-schema-to-typescript": "^15.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.4.0"
  }
}
